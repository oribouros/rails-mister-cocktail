<h1>Create a cocktail</h1>

<%= simple_form_for @cocktail do |f| %>
  <%= f.input :name, input_html: { autocomplete: "off" } %>
  <%= link_to 'Cancel', cocktails_path, class: "btn btn-outline-primary" %> <%= f.submit class: "btn btn-primary" %>
<% end %>

<%= link_to cocktails_path do %>
  Back to main page
<% end %>

