<h1>Create a cocktail</h1>

<%= simple_form_for @cocktail do |f| %>
  <%= f.input :name, input_html: { autocomplete: "off" } %>
  <%= f.input :virgin, as: :boolean, label: 'Is it virgin?' %>
  <%= f.input :photo, as: :file %>
  <%= link_to 'Cancel', cocktails_path, class: "btn btn-outline-danger" %> <%= f.submit class: "btn btn-danger" %>
<% end %>

<%= link_to 'Back', cocktails_path, class: "btn btn-danger" %>

